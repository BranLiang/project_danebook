<h1>Hello world</h1>
<%= form_for @photo do |f| %>
  <div class="form-group">
    <%= f.file_field :picture, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Upload Photo", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>

<hr>
<h2>Using link</h2>
<%= form_tag new_link_photo_path do %>
  <div class="form-group">
    <%= text_field_tag :image_url, '',class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Add Photo",class: "btn btn-lg btn-danger" %>
  </div>
<% end %>
