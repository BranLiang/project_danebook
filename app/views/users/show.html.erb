<div class="about-page">
  <div class="row">
    <div class="col-md-12">

      <%= render "shared/cover_header" %>

      <main>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title text-center"><strong>About</strong></h3>
          </div>
          <div class="panel-body row">
            <div class="col-md-5"> <!-- basic information -->

              <h4 class="text-primary"><strong>Basic Information</strong></h4>
              <table class="table table-striped table-bordered">
                <tr>
                  <td class="col-xs-5"><strong>Name:</strong></td>
                  <td class="col-xs-7"><%= current_user.name %></td>
                </tr>
                <tr>
                  <td class="col-xs-5"><strong>Birthday:</strong></td>
                  <td class="col-xs-7"><%= current_user.birthday %></td>
                </tr>
                <tr>
                  <td class="col-xs-5"><strong>College:</strong></td>
                  <td class="col-xs-7"><%= current_user.college %></td>
                </tr>
                <tr>
                  <td class="col-xs-5"><strong>Hometown:</strong></td>
                  <td class="col-xs-7"><%= current_user.home_town %></td>
                </tr>
                <tr>
                  <td class="col-xs-5"><strong>Currently Lives:</strong></td>
                  <td class="col-xs-7"><%= current_user.current_lives %></td>
                </tr>
              </table>

              <h4 class="text-primary"><strong>Contact Information</strong></h4>
              <table class="table table-striped table-bordered">
                <tr>
                  <td class="col-xs-5"><strong>Email:</strong></td>
                  <td class="col-xs-7"><%= current_user.email %></td>
                </tr>
                <tr>
                  <td class="col-xs-5"><strong>Telephone:</strong></td>
                  <td class="col-xs-7"><%= current_user.telephone %></td>
                </tr>
              </table>

            </div> <!-- end of the left column -->

            <div class="col-md-7"> <!-- start of the right column -->
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title text-center"><strong>Words to live By</strong></h3>
                </div>
                <div class="panel-body">
                  <%= current_user.words_to_live_by %>
                </div>
              </div>

              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title text-center"><strong>About Me</strong></h3>
                </div>
                <div class="panel-body">
                  <%= current_user.about %>
                </div>
              </div>

              <%= link_to "Edit Profile",edit_user_path(current_user), class: "btn btn-primary btn-block btn-lg" %>
            </div>

          </div>
        </div>
      </main>
    </div>
  </div>
</div>
